{
	"name": "neovide-cursor",
	"displayName": "Neovide Cursor",
	"description": "A Neovide-like Cursor Animation Plugin",
	"version": "1.0.1",
	"publisher": "30d98f9b2",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"cursor",
		"animation",
		"neovide",
		"theme",
		"visual"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./extension.js",
	"contributes": {

		"commands": [
			{
				"command": "neovideCursor.generatePath",
				"title": "$(add) Generate Path 生成路径",
				"category": "Neovide Cursor"
			},
			{
				"command": "neovideCursor.removePath",
				"title": "$(trash) Remove Generated Path 删除生成的路径",
				"category": "Neovide Cursor"
			},
			{
				"command": "neovideCursor.openConfig",
				"title": "$(edit) Open User Configurations 自定义参数设置",
				"category": "Neovide Cursor"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/30d98f9b2/Neovide-Cursor"
	},
	"license": "MIT",
	"icon": "icon.png"
}

